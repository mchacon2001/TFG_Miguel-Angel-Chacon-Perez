<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Informe {{ periodLabel }} - BrainyGym</title>
    <style>
        body { font-family: Arial, sans-serif; font-size: 12px; margin: 0; padding: 20px; }
        .header { text-align: center; margin-bottom: 30px; border-bottom: 2px solid #007bff; padding-bottom: 15px; }
        .header h1 { color: #007bff; margin: 0; font-size: 24px; }
        .header p { margin: 5px 0; color: #666; }
        .section { margin-bottom: 25px; page-break-inside: avoid; }
        .section h2 { color: #007bff; border-bottom: 1px solid #ddd; padding-bottom: 5px; font-size: 18px; }
        .stats-grid { display: table; width: 100%; margin: 15px 0; }
        .stats-item { display: table-cell; text-align: center; padding: 10px; border: 1px solid #ddd; }
        .stats-number { font-size: 24px; font-weight: bold; color: #007bff; }
        .stats-label { font-size: 11px; color: #666; margin-top: 5px; }
        .table { width: 100%; border-collapse: collapse; margin: 10px 0; }
        .table th, .table td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        .table th { background-color: #f8f9fa; font-weight: bold; }
        .footer { text-align: center; margin-top: 30px; font-size: 10px; color: #666; }
    </style>
</head>
<body>
    <div class="header">
        <h1>Informe {{ periodLabel }} - BrainyGym</h1>
        <p>Período: {{ dateRange.from|date('d/m/Y') }} - {{ dateRange.to|date('d/m/Y') }}</p>
        <p>Generado el: {{ generatedAt|date('d/m/Y H:i:s') }}</p>
    </div>

    <!-- Estadísticas de Usuarios -->
    <div class="section">
        <h2>📊 Estadísticas de Usuarios</h2>
        <div class="stats-grid">
            <div class="stats-item">
                <div class="stats-number">{{ data.userStats.total }}</div>
                <div class="stats-label">Total Usuarios</div>
            </div>
            <div class="stats-item">
                <div class="stats-number">{{ data.userStats.new }}</div>
                <div class="stats-label">Nuevos Usuarios</div>
            </div>
            <div class="stats-item">
                <div class="stats-number">{{ data.userStats.active }}</div>
                <div class="stats-label">Usuarios Activos</div>
            </div>
            <div class="stats-item">
                <div class="stats-number">{{ data.userStats.activePercentage }}%</div>
                <div class="stats-label">Porcentaje Activo</div>
            </div>
        </div>
    </div>

    <!-- Estadísticas de Dietas -->
    <div class="section">
        <h2>🍎 Estadísticas de Dietas</h2>
        <div class="stats-grid">
            <div class="stats-item">
                <div class="stats-number">{{ data.dietStats.total }}</div>
                <div class="stats-label">Total Dietas</div>
            </div>
            <div class="stats-item">
                <div class="stats-number">{{ data.dietStats.new }}</div>
                <div class="stats-label">Nuevas Dietas</div>
            </div>
        </div>
        
        {% if data.dietStats.popular|length > 0 %}
        <h3>Dietas Más Populares</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre de la Dieta</th>
                    <th>Asignaciones</th>
                </tr>
            </thead>
            <tbody>
                {% for diet in data.dietStats.popular %}
                <tr>
                    <td>{{ diet.name }}</td>
                    <td>{{ diet.assignments }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>

    <!-- Estadísticas de Rutinas -->
    <div class="section">
        <h2>💪 Estadísticas de Rutinas</h2>
        <div class="stats-grid">
            <div class="stats-item">
                <div class="stats-number">{{ data.routineStats.total }}</div>
                <div class="stats-label">Total Rutinas</div>
            </div>
            <div class="stats-item">
                <div class="stats-number">{{ data.routineStats.new }}</div>
                <div class="stats-label">Nuevas Rutinas</div>
            </div>
        </div>
    </div>

    <!-- Estadísticas Físicas -->
    <div class="section">
        <h2>⚖️ Estadísticas Físicas</h2>
        <div class="stats-grid">
            <div class="stats-item">
                <div class="stats-number">{{ data.physicalStats.totalRecords }}</div>
                <div class="stats-label">Registros Físicos</div>
            </div>
            <div class="stats-item">
                <div class="stats-number">{{ data.physicalStats.averageWeight }} kg</div>
                <div class="stats-label">Peso Promedio</div>
            </div>
        </div>
    </div>

    <!-- Estadísticas Mentales -->
    <div class="section">
        <h2>🧠 Estadísticas Mentales</h2>
        <div class="stats-grid">
            <div class="stats-item">
                <div class="stats-number">{{ data.mentalStats.totalRecords }}</div>
                <div class="stats-label">Registros Mentales</div>
            </div>
            <div class="stats-item">
                <div class="stats-number">{{ data.mentalStats.averageMood }}/10</div>
                <div class="stats-label">Ánimo Promedio</div>
            </div>
            <div class="stats-item">
                <div class="stats-number">{{ data.mentalStats.averageSleep }}/10</div>
                <div class="stats-label">Calidad Sueño</div>
            </div>
        </div>
    </div>

    <!-- Distribución de Objetivos -->
    <div class="section">
        <h2>🎯 Distribución de Objetivos</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Objetivo</th>
                    <th>Cantidad de Usuarios</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Ganar Músculo</td>
                    <td>{{ data.goalStats.gainMuscle }}</td>
                </tr>
                <tr>
                    <td>Perder Peso</td>
                    <td>{{ data.goalStats.loseWeight }}</td>
                </tr>
                <tr>
                    <td>Mantener Peso</td>
                    <td>{{ data.goalStats.maintainWeight }}</td>
                </tr>
                <tr>
                    <td>Mejorar Salud Física</td>
                    <td>{{ data.goalStats.physicalHealth }}</td>
                </tr>
                <tr>
                    <td>Mejorar Salud Mental</td>
                    <td>{{ data.goalStats.mentalHealth }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="footer">
        <p>BrainyGym - Sistema de Gestión de Gimnasio</p>
        <p>Informe generado automáticamente el {{ generatedAt|date('d/m/Y H:i:s') }}</p>
    </div>
</body>
</html>
